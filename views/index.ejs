<%- include("partials/header.ejs") %>


<main class="container">
    <h1>Welcome to TV Show/Movies guide...</h1>
    <div class="bothMedia-container">
        <div class="movie-container">
            <h2>Movies: </h2>
            <div class="movieLinks hover">
                <% for( let i = 0; i < data.results.length; i++ ) { %>
                    <form  action=<%= `/searchedId-name/movie/${data.results[i].id}`%> method="post">
                        <button type="submit" name="id1" value="<%= data.results[i].id %>"><img src= "<%= data.results[i].backdrop_path? image + data.results[i].backdrop_path : "https://images.unsplash.com/photo-1704541511023-4d16e2b5192c?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHw1fHx8ZW58MHx8fHx8"  %>" alt="movie images">
                            <p><%= data.results[i].original_title  %></p>                       
                        </button>    
                    </form>
                <% } %>
            </div>
            
            <div class="page-no-edit">
                <a href="/previousPage-movie">Prev</a> <p>page no:- <%=  data.page %></p> <a href="/nextPage-movie">Next</a>
            </div>
        </div>
        <div class="tv-show-container">
            <h2>TV Shows: </h2>
            <div class="tv-show-links hover">
                <% for( let i = 0; i < tvData.results.length; i++ ) { %>
                    <form  action=<%= `/searchedId-name/tv/${tvData.results[i].id}`%> method="post">
                        <button type="submit" name="id1" value="<%= tvData.results[i].id %>"><img src= "<%=  tvData.results[i].backdrop_path? image + tvData.results[i].backdrop_path : "https://images.unsplash.com/photo-1704541511023-4d16e2b5192c?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHw1fHx8ZW58MHx8fHx8" %>" alt="movie images">
                            <p><%= tvData.results[i].original_name  %></p>                       
                        </button>
                        
                    </form>
                    <% } %>
            </div>
            <div class="page-no-edit">
                <a href="/previousPage-tvShow">Prev</a> <p>page no:- <%=  tvData.page %></p> <a href="/nextPage-tvShow">Next</a>
            </div>
            
        </div>
    </div>
</main>




<%-include("partials/footer.ejs") %>